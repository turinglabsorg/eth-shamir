{
  "name": "@turinglabs/eth-shamir",
  "version": "1.0.0",
  "description": "Create and restore Eth private keys with Shamir",
  "main": "dist/index.js",
  "bin": {
    "eth-shamir": "dist/index.js",
    "publish": "npm publish --access public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:e2e": "jest tests/e2e",
    "test:performance": "jest tests/performance",
    "test:all": "jest tests",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "CI=true jest --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test:workflow": "act --container-architecture linux/amd64"
  },
  "keywords": [
    "ethereum",
    "shamir",
    "secret-sharing",
    "cli",
    "cryptography"
  ],
  "author": "turinglabs",
  "license": "MIT",
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "crypto-js": "^4.2.0",
    "inquirer": "^8.2.0",
    "secrets.js-grempe": "^2.0.0",
    "viem": "^2.37.4"
  }
}